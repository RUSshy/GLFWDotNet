<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;NETSTANDARD2_0</DefineConstants>
  </PropertyGroup>

  <Target Name="CopyGLFWDlls" AfterTargets="BeforeBuild">
    <PropertyGroup>
        <GLFWDLLsDirectory>$(RepositoryRootDirectory)ext\GLFW\</GLFWDLLsDirectory>
    </PropertyGroup>
    
    <Copy SourceFiles="$(GLFWDLLsDirectory)x64\glfw3.dll"
          DestinationFolder="$(TargetDir)x64\" />

    <Copy SourceFiles="$(GLFWDLLsDirectory)x86\glfw3.dll"
          DestinationFolder="$(TargetDir)x86\" />

    <ItemGroup>
      <None Include="$(TargetDir)x64\glfw3.dll">
        <Pack>true</Pack>
        <PackagePath>lib\$(TargetFramework)\x64\</PackagePath>
      </None>
      <None Include="$(TargetDir)x86\glfw3.dll">
        <Pack>true</Pack>
        <PackagePath>lib\$(TargetFramework)\x86\</PackagePath>
      </None>
    </ItemGroup>
  </Target>

</Project>
